local function testWebhook()
    print("ğŸ§ª Testing webhook manually...")
    local testFields = {
        { name = "ğŸ§ª Test", value = "Webhook test successful!", inline = true },
        { name = "ğŸ¯ Test Killer", value = "TestPlayer: 5 kills â­", inline = true }
    }
    sendEmbedToDiscord("ğŸ§ª Webhook Test", "Testing connection to Discord with killer data", testFields, 0x9932CC)
end

------------------------------------------------------------
-- ğŸš€ Initialization
------------------------------------------------------------
print("ğŸ”§ Starting Discord webhook system with kill tracking...")

-- Simple startup - no waiting for players
task.delay(5, function()
    sendServerStatus()
end)

task.delay(15, function()
    testWebhook()
end)

print("âœ… Discord webhook system loaded successfully!")
print("ğŸ’¡ System will track top killers from match results and send to webhook")
